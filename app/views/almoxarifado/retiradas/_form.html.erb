<%= simple_form_for(almoxarifado_retirada, remote: true) do |f| %>
  <div class="modal-body">
    <%= f.association :almoxarifado_setor, prompt: 'Selecione o setor', label: 'Setor' %>
    <%= f.input :almoxarifado_materiais_id, as: :hidden, input_html: { value: @almoxarifado_material.id } %>
    <%= f.input :quantidade, as: :integer %>
    <%= f.input :responsavel %>
  </div>
  <div class="modal-footer">
    <%= f.submit "Salvar", class: 'btn btn-primary' %>
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
  </div>
<% end %>
