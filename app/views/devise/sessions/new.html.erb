<div class="row">
  <div class="col-lg-4 col-md-6 ml-auto mr-auto">
    <h1 class="text-center mb-3">Login</h1>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.text_field :login, autofocus: true, placeholder: 'Login ou E-mail', class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Senha", class: 'form-control' %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-check mb-3">
          <label class="form-check-label">
            <%= f.check_box :remember_me, class: "form-check-input" %>Lembrar-me
          </label>
        </div>
      <% end -%>

      <div class="form-group">
        <%= f.submit 'Entrar', class: "btn btn-primary btn-block btn-lg" %>
      </div>
    <% end %>

    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
