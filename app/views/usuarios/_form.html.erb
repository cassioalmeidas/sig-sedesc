<%= simple_form_for(usuario, remote: true, html: { class: 'form-horizontal' }) do |f| %>
  <div class="modal-body">
    <div class="form-group">
      <%= f.input :username, label: 'Login' %>
      <%= f.input :email, as: :email, label: 'Email' %>
      <%= f.input :password, as: :password, label: 'Senha' %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.input :password_confirmation, as: :password, label: 'Confirme a senha' %>
      <%= f.association :roles, as: :check_boxes, label: 'PapÃ©is' %>
    </div>
  </div>

  <div class="modal-footer">
    <%= f.submit "Salvar", class: 'btn btn-primary' %>
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
  </div>
<% end %>
